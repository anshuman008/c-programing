// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
   
    
    int i = 0;
    int k;
    
    
while(i<=n){
 int a = 1;
 k = n-i+1;
 
   int space = 0;
   while(space<i){
      cout<<" ";
      space++;
   }
    int j = 1;
    while(j<=k){
        cout<<a;
        cout<<" ";
        j++;
    }
    cout<<endl;
    i++;
 
    
}
    return 0;
}
