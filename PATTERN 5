#include<iostream>
using namespace std;

int main(){
    
    int n;
    cin>>n;
    int raw = 1;
    int a;
    
    while(raw <= n){
        int sum = raw;
        
        a = n-raw+1;
        
        int space = 0;
        while(space<=raw){
            cout<<" ";
            space++;
        }
        
        int col= 1;
        while(col<=a){
            
            cout<<sum;
            sum++;
            col++;
        }
        cout<<endl;
        raw++;
    }
    
    return 0;
}
