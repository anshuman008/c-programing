// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;


int main() {

int n;
cin>>n;

int i = 1;
while(i<=n){
    int space = n-i;
    while(space){
        cout<<" ";
        space--;
    }

    int j = 1;
    
    while(j<=i){
        cout<<j;
        j++;
    }
    int a = i-1;
    int b = a;
    int k = 1;
    while(k<=b){
        
        cout<<a;
        k++;
        a--;
    }
    
    cout<<endl;
    i++;
    
}

    return 0;
}
