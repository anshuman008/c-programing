// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    int a;
    
    int i = 0;
    
while(i<=n){
      a = n-i+1;
   int space = 0;
   while(space<i){
      cout<<" ";
      space++;
   }
    int j = 1;
    while(j<=a){
        cout<<"*";
        // cout<<" ";
        j++;
    }
    cout<<endl;
    i++;
 
    
}
    return 0;
}
